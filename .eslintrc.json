{
  "extends": [
    // "airbnb",
    // "airbnb/hooks",
    // TODO: Fix error (Failed to load plugin '@typescript-eslint' declared in '.eslintrc.json Â» eslint-config-airbnb-typescript)
    // "airbnb-typescript",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
    // "next"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
    "no-unused-vars": "warn",
    "operator-linebreak": [2, "before"],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "semi": ["error", "always"],
    "linebreak-style": 0,
    "quotes": ["error", "single", "avoid-escape"],
    "comma-dangle": ["error", "always-multiline"],
    "import/no-cycle": 0,
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "arrow-parens": ["error", "as-needed"],
    "curly": "off",
    "no-console": "off",
    "camelcase": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off"
//    "react/jsx-props-no-spreading": "off",
//    "import/extensions": [
